all:                                                                                                                                                                                                                                     
  vars:                                                                                                                                                                                                                                  
    ansible_user: root
    become_user: root
    pfaffmanager_base_url: "<%= Discourse.base_url %>"
    pfaffmanager_server_id: "<%= id%>"
    pfaffmanager_api_key: "<%= SiteSetting.pfaffmanager_api_key%>"
  children:
    discourse:
      hosts:
        <%= hostname %>:
          ssh_key_filename: /tmp/id_rsa_server<%= id%>.pub
          ansible_ssh_private_key_file: /tmp/id_rsa_server<%= id%>
          discourse_name: "<%= user_name%>"
          discourse_email: "<%= user.email%>"
          discourse_install_type: "<%= install_type %>" # TODO select
          discourse_hostname: "<%= hostname %>"
          discourse_ssh_user: root # TODO: adjust --ignored?
