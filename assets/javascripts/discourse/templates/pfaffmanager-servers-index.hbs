<div class="pfaffmanager-index">
servers pfaffmanager-controller-index.hbs

<h2>Server List for {{i18n "pfaffmanager.server.x_servers" count=servers.length}}</h2>

<p>
  <a href="/s">Purchase more Servers</a>&nbsp;
  {{#if currentUser.admin}}
  <a href="/g/CreateServer">CreateServer</a>&nbsp;
  <a href="/g/Ec2Server">EC2</a>&nbsp;
  <a href="/g/SelfInstall">SelfInstall</a>
{{/if}}
</p>

{{#each servers as |server|}}
  <hr>
  {{#link-to "pfaffmanager.servers.show" server.id}}
    {{server.hostname}}
  {{/link-to}}
  <br>Created at: {{~format-date server.created_at format="medium" }}
  <br>Updated at: {{~format-date server.updated_at format="medium" }}
  <br>
  Open: <a href="https://{{server.hostname}}">{{server.hostname}}</a>
{{/each}}

{{outlet}}

</div>